<h1>Items</h1>

<% if @items.empty? %>
	<b>No items in store</b>
<% else %>
	<table class="items">
		<tr>
			<th>item id</th>
			<th>Name</th>
			<th>Image</th>
			<th>Price</th>
			<th></th>
			<th></th>
		</tr>

		<% @items.each do |i| %>
		
			<tr data-item_id="<%= i.id %>">
				<td><%= i.id %></td>
				<td><%= link_to i.name, item_path(i) %></td>
				<td><%= image_tag i.image.pathmap("/uploads/images/#{i.image}"), width: '150px', height: '100px' if i.image %></td>
				<td><%= i.price %> руб.</td>
				<td><span class="deleteAction">Удалить</span></td>
				<td>Рейтинг: <%= i.votes_count %>, <%= link_to "+", upvote_item_path(i) %></td>
			</tr>

		<% end %>
	</table>
<% end %>